<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    tools:context=".RezultateTesteActivity">

    <TextView
        android:id="@+id/gaitanaru_teodora_tv_rezultate_teste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rezultate_teste_tv"
        android:fontFamily="@font/arima_madurai_black"
        android:textColor="@color/mauve"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"/>
    <ListView
        android:id="@+id/gaitanaru_teodora_lv_rezultateTeste"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="4dp"
        app:layout_constraintBottom_toTopOf="@id/gaitanaru_teodora_btn_vizualizareStatistici"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gaitanaru_teodora_tv_rezultate_teste"/>

    <Button
        android:id="@+id/gaitanaru_teodora_btn_vizualizareStatistici"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textColor="@color/light_pink"
        android:background="@drawable/button"
        android:text="@string/rezTestAct_vizualizare_statistici"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gaitanaru_teodora_lv_rezultateTeste" />
</androidx.constraintlayout.widget.ConstraintLayout>